<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!--<include resource="org/springframework/boot/logging/logback/base.mapper" />-->

    <springProperty scope="context" name="springAppName" source="spring.application.name" defaultValue="prelog"/>
    <property name="PATH" value="logs"/>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %highlight(%-5level) %green([%15.15thread]) %cyan(%60.60logger) #%-5.5L: %black(%msg%n)
            </pattern>
        </encoder>
    </appender>

    <appender name="ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 如果配置中不存在, 给出默认的 -->
        <file>${PATH}/${springAppName}/application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${PATH}/${springAppName}/application.log.%d{yyyy-MM-dd}.%i</fileNamePattern>
            <!-- each file should be at most 100MB, keep 60 days worth of history, but at most 50GB -->
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>60</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%-5level] [%logger:%line]--%mdc{client} %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>

    <springProfile name="test">
        <root level="info">
            <appender-ref ref="ROLLING"/>
        </root>
    </springProfile>

    <springProfile name="prod">
        <root level="info">
            <!--<appender-ref ref="STDOUT"/>-->
            <appender-ref ref="ROLLING"/>
        </root>
    </springProfile>
</configuration>
